<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProject1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Button
                 x:Name="ClicUp"
                 Text="Click me to go up"
                 SemanticProperties.Hint="Go up"
                 Clicked="ChangePhotoUp"
                 HorizontalOptions="Center" />  

            <Image
                x:Name="theImage"
                Source="https://st5.depositphotos.com/1655013/63876/i/450/depositphotos_638769962-stock-photo-cute-illustration-corgi-puppy-cartoon.jpg"
                SemanticProperties.Description="pic2"
                HeightRequest="200"
                HorizontalOptions="Center" />


           
            <Button
                x:Name="ClickDown"
                Text="Click me to go down"
                SemanticProperties.Hint="Change the photo"
                Clicked="ChangePhotoDown"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
